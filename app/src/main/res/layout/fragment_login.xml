<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_back">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.fragment.login.LoginFragment">

        <EditText
            android:id="@+id/fra_login_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fra_login_userName" />

        <EditText
            android:id="@+id/fra_login_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:ems="10"
            android:hint="UserName"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/fra_login_signIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingStart="80dp"
            android:paddingTop="16dp"
            android:paddingEnd="80dp"
            android:paddingBottom="16dp"
            android:text="Sign In"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fra_login_password" />

        <Button
            android:id="@+id/fra_login_goToRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:background="@android:color/transparent"
            android:text="Register Now"
            android:textAllCaps="false"
            android:textColor="#1f2e3d"
            app:layout_constraintStart_toStartOf="@+id/fra_login_signIn"
            app:layout_constraintTop_toBottomOf="@+id/fra_login_resetPassword" />

        <Button
            android:id="@+id/fra_login_resetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            android:text="Reset Password"
            android:textAllCaps="false"
            android:textColor="#1f2e3d"
            app:layout_constraintEnd_toEndOf="@+id/fra_login_signIn"
            app:layout_constraintStart_toStartOf="@+id/fra_login_signIn"
            app:layout_constraintTop_toBottomOf="@+id/fra_login_signIn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>